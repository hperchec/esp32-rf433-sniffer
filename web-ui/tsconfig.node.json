{
  /**
   * TypeScript config for Node context
   */
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    /* Also include hidden/dot files for each extension */
    "**/*.js", "**/.*.js",
    "**/*.cjs", "**/.*.cjs",
    "**/*.mjs", "**/.*.mjs",
    "**/*.ts", "**/.*.ts",
    "**/*.cts", "**/.*.cts",
    "**/*.mts", "**/.*.mts"
  ],
  "exclude": [
    /* See tsconfig.app.json for source files */
    "src",
    "dist"
  ]
}
